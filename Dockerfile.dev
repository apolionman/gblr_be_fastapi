FROM python:3.11-slim

# Environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PATH="/root/.cargo/bin:$PATH"

WORKDIR /app

# Install system dependencies and Rust toolchain
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    ccache \
    libgl1 \
    libglib2.0-0 \
    ffmpeg \
    git \
    wget \
    pkg-config \
    libssl-dev \
    build-essential \
    libffi-dev \
    python3-dev \
    libxml2-dev \
    libxslt1-dev \
    zlib1g-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Rust using rustup and set default
RUN curl https://sh.rustup.rs -sSf | bash -s -- -y && \
    /root/.cargo/bin/rustup default stable && \
    /root/.cargo/bin/rustup update

# Upgrade pip and install Python build tools
COPY requirements.txt ./
RUN pip install --upgrade pip setuptools wheel setuptools-rust

# Add this if you still face issues
# RUN pip install cmake maturin

# Install tokenizers from source first
RUN pip install --no-binary :all: tokenizers

# Now install BLIP
RUN pip install -e git+https://github.com/pharmapsychotic/BLIP.git@lib#egg=blip

# Clone clip-interrogator
RUN git clone -b open-clip https://github.com/pharmapsychotic/clip-interrogator.git

# Optional: Cache vocab files
RUN mkdir -p /app/cache && \
  wget https://huggingface.co/pharma/ci-preprocess/resolve/main/ViT-H-14_laion2b_s32b_b79k_artists.pkl -P /app/cache && \
  wget https://huggingface.co/pharma/ci-preprocess/resolve/main/ViT-H-14_laion2b_s32b_b79k_flavors.pkl -P /app/cache && \
  wget https://huggingface.co/pharma/ci-preprocess/resolve/main/ViT-H-14_laion2b_s32b_b79k_mediums.pkl -P /app/cache && \
  wget https://huggingface.co/pharma/ci-preprocess/resolve/main/ViT-H-14_laion2b_s32b_b79k_movements.pkl -P /app/cache && \
  wget https://huggingface.co/pharma/ci-preprocess/resolve/main/ViT-H-14_laion2b_s32b_b79k_trendings.pkl -P /app/cache

# Copy your app code
COPY . .

EXPOSE 8000
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
